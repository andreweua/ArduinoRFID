@model IEnumerable<InnerSoft.MeEncontre.Web.Site.ViewModel.ColaboradorViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InternalPartial.cshtml";
}


<div class="span12">
            <div class="">
                <ul class="breadcrumb">
                  <li><a href="#">Home</a> <span class="divider">/</span></li>
                  <li><a href="#">Cadastro</a> <span class="divider">/</span></li>
                  <li class="active">Colaboradores</li>
                </ul>
            </div>  
        <hr>
    <table class="table">
        <tr>       
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Key)
            </th>      
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.UltimoAcesso)
            </th>            
            <th>
                Ações
            </th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td valign="middle">
                @Html.DisplayFor(modelItem => item.Key)
            </td>
            <td valign="middle">
                @Html.DisplayFor(modelItem => item.Documento)
            </td>        
            <td valign="middle">
                @Html.DisplayFor(modelItem => item.Email)
            </td>                            
            <td valign="middle">
                @Html.DisplayFor(modelItem => item.UltimoAcesso)
            </td>                            
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id })
            </td>
        </tr>
    }

    </table>
    <div class="tool-actions">
        @Html.ActionLink("Incluir Colaborador", "Create", "", new { @class = "btn btn-primary" })
    </div>
</div>
