@model InnerSoft.MeEncontre.Web.Site.ViewModel.ColaboradorViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_InternalPartial.cshtml";
}
     <div class="span12">
            <div class="">
                <ul class="breadcrumb">
                  <li><a href="#">Home</a> <span class="divider">/</span></li>
                  <li><a href="#">Cadastro</a> <span class="divider">/</span></li>
                  <li class="active">Incluir Colaborador</li>
                </ul>
            </div>  
        <hr>
          <div class="well">

             @using (Html.BeginForm("Create", "Colaborador", FormMethod.Post, new { @class = "form-horizontal" }))
             {
                         
               <div class="control-group">
                     @Html.LabelFor(model => model.Nome, new { @class = "control-label obrigatorio" })
                    <div class="controls">
                         @Html.TextBoxFor(m => m.Nome, new { @class = "input-xxlarge" })
                         @Html.ValidationMessageFor(model => model.Nome)
                    </div>
                </div>
                 <div class="control-group">
                     @Html.LabelFor(model => model.Key, new { @class = "control-label obrigatorio" })
                    <div class="controls">
                         @Html.TextBoxFor(m => m.Key, new { @class = "input-xxlarge" })
                         @Html.ValidationMessageFor(model => model.Key)
                    </div>
                </div>               
                 <div class="control-group">
                     @Html.LabelFor(model => model.Documento, new { @class = "control-label obrigatorio" })
                    <div class="controls">
                         @Html.TextBoxFor(m => m.Documento, new { @class = "input-xxlarge" })
                         @Html.ValidationMessageFor(model => model.Documento)
                    </div>
                </div>                             
                 <div class="control-group">
                     @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                    <div class="controls">
                         @Html.TextBoxFor(model => model.Email, new { @class = "input-xxlarge" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>                 
                 <div class="control-group">
                    <div class="controls">                      
                        <input type="submit" value="Incluir Colaborador" class="btn btn-primary"/>
                        @Html.ActionLink("Voltar", "Index", "Colaborador", new { @class = "btn" })
                    </div>
                  </div>
             }
          </div>          
        </div><!--/span-->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

