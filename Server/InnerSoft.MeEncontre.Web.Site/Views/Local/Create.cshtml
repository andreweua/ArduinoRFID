@model InnerSoft.MeEncontre.Web.Site.ViewModel.LocalViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_InternalPartial.cshtml";
}
     <div class="span12">
            <div class="">
                <ul class="breadcrumb">
                  <li><a href="#">Home</a> <span class="divider">/</span></li>
                  <li><a href="#">Cadastro</a> <span class="divider">/</span></li>
                  <li class="active">Incluir Local</li>
                </ul>
            </div>  
        <hr>
          <div class="well">

             @using (Html.BeginForm("Create", "Local", FormMethod.Post, new { @class = "form-horizontal" }))
             {
                         
                <div class="control-group">
                     @Html.LabelFor(model => model.Nome, new { @class = "control-label obrigatorio" })
                    <div class="controls">
                         @Html.TextBoxFor(m => m.Nome, new { @class = "input-xxlarge" })
                         @Html.ValidationMessageFor(model => model.Nome)
                    </div>
                </div>
                <div class="control-group">
                     @Html.LabelFor(model => model.Key, new { @class = "control-label obrigatorio" })
                    <div class="controls">
                         @Html.TextBoxFor(m => m.Key, new { @class = "input-xxlarge" })
                         @Html.ValidationMessageFor(model => model.Key)
                    </div>
                </div>
                 <div class="control-group">
                     @Html.LabelFor(model => model.Endereco, new { @class = "control-label obrigatorio" })
                    <div class="controls">
                         @Html.TextBoxFor(m => m.Endereco, new { @class = "input-xxlarge" })
                         @Html.ValidationMessageFor(model => model.Endereco)
                    </div>
                </div>                             
                 <div class="control-group">
                     @Html.LabelFor(model => model.Latitude, new { @class = "control-label" })
                    <div class="controls">
                         @Html.TextBoxFor(model => model.Latitude, new { @class = "input-small" })
                        @Html.ValidationMessageFor(model => model.Latitude)
                    </div>
                </div>
                <div class="control-group">
                     @Html.LabelFor(model => model.Longitude, new { @class = "control-label" })
                    <div class="controls">
                         @Html.TextBoxFor(model => model.Longitude, new { @class = "input-small" })
                        @Html.ValidationMessageFor(model => model.Longitude)
                    </div>
                </div>
                 <div class="control-group">
                    <div class="controls">                      
                        <input type="submit" value="Incluir Local" class="btn btn-primary"/>
                        @Html.ActionLink("Voltar", "Index", "Local", new { @class = "btn" })
                    </div>
                  </div>
             }
          </div>          
        </div><!--/span-->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

